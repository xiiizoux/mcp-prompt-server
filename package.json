{
  "name": "mcp-prompt-server",
  "version": "1.0.0",
  "description": "MCP服务器，提供预设的prompt工具来引导Claude执行任务",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "./node_modules/.bin/tsc",
    "build:worker": "tsc -p tsconfig.workers.json",
    "start": "npm run build && node dist/index.js",
    "dev": "nodemon src/index.js",
    "dev:worker": "npm run build:worker && wrangler dev",
    "deploy:worker": "npm run build:worker && wrangler publish",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "mcp",
    "claude",
    "prompt",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "express": "^4.18.2",
    "fs-extra": "^11.2.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250524.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.15.21",
    "@types/yaml": "^1.9.7",
    "nodemon": "^3.0.3",
    "typescript": "^5.8.3",
    "wrangler": "^3.30.1"
  }
}
