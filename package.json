{
  "name": "mcp-prompt-server",
  "version": "1.0.0",
  "description": "MCP服务器，提供预设的prompt工具来引导Claude执行任务",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "build": "./node_modules/.bin/tsc",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "ui:dev": "cd ui && npm run dev -- --port 9010",
    "ui:build": "cd ui && npm run build",
    "ui:install": "cd ui && npm install",
    "setup": "npm install && npm run ui:install",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "prepare-db": "node scripts/prepare-db.js",
    "dev:full": "concurrently \"npm run dev\" \"npm run ui:dev\""
  },
  "keywords": [
    "mcp",
    "claude",
    "prompt",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "@supabase/supabase-js": "^2.49.8",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "fs-extra": "^11.2.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.21",
    "@types/yaml": "^1.9.7",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.3"
  }
}
