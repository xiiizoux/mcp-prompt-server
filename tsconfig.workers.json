{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2022",
    "lib": ["es2020"],
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["@cloudflare/workers-types"]
  },
  "include": ["src/workers.ts", "src/api/**/*", "src/core/**/*", "src/storage/**/*", "src/types.ts"],
  "exclude": ["node_modules", "dist"]
}
